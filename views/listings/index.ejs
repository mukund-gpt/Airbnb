<% layout("layouts/boilerplate.ejs") %>

  <body>
    <h1>All Listings</h1>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
      <% for(let listings of allListings){%>
        <a href="/listings/<%= listings._id %>" class="listing-link">
          <div class="card col" >
            <img src="<%= listings.image.url %>" class="card-img-top" style="height: 20rem;" alt="Image">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
               <b> <%= listings.title %></b> <br>
                &#8377;<%= listings.price.toLocaleString("en-IN") %>/night, 
                <%= listings.location %>,<%= listings.country %>
              </p>

            </div>
          </div>
        </a>
      <% } %>
    </div>

  </body>